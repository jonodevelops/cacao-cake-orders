<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Location</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= user.username %></td>
        <td><%= user.location.name %></td>
        <td><%= 'Admin' if user.admin %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'action' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
