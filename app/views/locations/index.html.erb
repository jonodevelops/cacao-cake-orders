<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= location.name %></td>
        <td><%= link_to 'Show', location, class: 'action' %></td>
        <td><%= link_to 'Edit', edit_location_path(location), class: 'action' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
